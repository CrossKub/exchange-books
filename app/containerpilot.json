{
  "consul": "localhost:8500",
  "logging": {
    "level": "INFO",
    "format": "default",
    "output": "stdout"
  },
  "services": [
    {
      "name": "books-api",
      "port": "{{.PORT}}",
      "poll": 3,
      "ttl": 10,
      "health": "/usr/bin/curl --fail -o /dev/null -s http://localhost:{{.PORT}}/health"
    }
  ],
  "coprocesses": [
    {
      "command": ["/usr/local/bin/consul", "agent",
                  "-data-dir=/data",
                  "-config-dir=/config",
                  "-rejoin",
                  "-retry-join", "{{.CONSUL}}",
                  "-retry-max", "10",
                  "-retry-interval", "10s"],
      "restarts": "unlimited"
    }
  ],
  "backends": [
    {
      "name": "{{.RABBITMQ_SERVICE}}",
      "poll": 3,
      "onChange": "pkill -SIGHUP node"
    }, {
      "name": "{{.MYSQL_SERVICE}}",
      "poll": 3,
      "onChange": "pkill -SIGHUP node"
    }
  ]
}
